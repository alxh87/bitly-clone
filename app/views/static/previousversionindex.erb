<div class="centre">
<table id="db-list">

  <tr>
  	<th>ID</th>
    <th>Long URL</th>
    <th>Short URL</th> 
    <th>Click Count</th>
  <tr>
  <% Url.all.each do |x| %>
  	<td><%= x.id %></td>
    <td><%= x.long_url %></td>
    <td><a href= "<%=x.short_url%>"><%= x.short_url %></a></td> 
    <td><%= x.click_count %></td>
  </tr>
  <%end%>
</table>
</div>



